<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anhnenlogin"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:text="ĐĂNG KÝ"
        android:textColor="#03A9F4"
        android:textSize="50sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edt_user_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="54dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/cr20bffefefef"
        android:hint="Tên đăng nhập"
        android:padding="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="3dp" />

    <EditText
        android:id="@+id/edt_pass_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="54dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/cr15bffefefef"
        android:hint="Mật khẩu"
        android:padding="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="3dp"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/edt_confirmpass_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="54dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/cr15bffefefef"
        android:hint="Xác nhận mật khẩu"
        android:padding="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="3dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/bt_signup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="54dp"
        android:background="@drawable/sign_up"
        android:backgroundTint="#004665"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Đăng ký"
        android:textSize="18dp"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/bt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign_in"
        android:clickable="true"
        android:focusable="true"
        android:text="Thoát"
        android:textSize="19dp"
        android:backgroundTint="#03A9F4"
        app:backgroundTint="#03A9F4"
        android:textStyle="bold" />

</LinearLayout>
